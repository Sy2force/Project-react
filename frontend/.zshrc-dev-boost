# Fonctions utilitaires dÃ©veloppement
clean-dev() {
    echo "ğŸ§¹ Nettoyage environnement dev..."
    
    # Nettoyage Node.js
    rm -rf node_modules/.cache 2>/dev/null || true
    rm -rf .next/cache 2>/dev/null || true
    rm -rf dist 2>/dev/null || true
    rm -rf build 2>/dev/null || true
    rm -rf coverage 2>/dev/null || true
    rm -rf playwright-report 2>/dev/null || true
    rm -rf test-results 2>/dev/null || true
    
    # Nettoyage caches
    npm cache clean --force 2>/dev/null || true
    pnpm store prune 2>/dev/null || true
    yarn cache clean 2>/dev/null || true
    
    echo "âœ… Nettoyage terminÃ©"
}

# Mode guerre dÃ©veloppement - Performance maximale
dev-war-mode() {
    echo "âš”ï¸  ACTIVATION MODE GUERRE DEV"
    echo "=============================="
    
    # Augmenter les limites systÃ¨me
    ulimit -n 65536
    ulimit -u 2048
    
    # Variables d'environnement maximales
    export NODE_OPTIONS="--max-old-space-size=16384 --max-semi-space-size=1024 --optimize-for-size"
    export UV_THREADPOOL_SIZE=256
    
    # Optimisations systÃ¨me
    sudo sysctl -w kern.maxfiles=65536 2>/dev/null || true
    sudo sysctl -w kern.maxfilesperproc=32768 2>/dev/null || true
    
    # Purger la mÃ©moire
    sudo purge 2>/dev/null || true
    
    echo "ğŸš€ Mode guerre activÃ©!"
    echo "ğŸ“Š Limites systÃ¨me:"
    echo "   - File descriptors: $(ulimit -n)"
    echo "   - Processes: $(ulimit -u)"
    echo "   - Node memory: 16GB"
    echo "   - UV threads: 256"
}

# Mode dÃ©veloppement normal
dev-normal-mode() {
    echo "ğŸ”„ Retour mode dÃ©veloppement normal"
    
    # Restaurer les valeurs par dÃ©faut
    export NODE_OPTIONS="--max-old-space-size=8192 --max-semi-space-size=512"
    export UV_THREADPOOL_SIZE=128
    
    ulimit -n 10240
    ulimit -u 1024
    
    echo "âœ… Mode normal activÃ©"
}

# Monitoring systÃ¨me dÃ©veloppement
dev-monitor() {
    echo "ğŸ“Š MONITORING SYSTÃˆME DÃ‰VELOPPEMENT"
    echo "=================================="
    
    # CPU et mÃ©moire
    echo "ğŸ’» SystÃ¨me:"
    echo "   CPU usage: $(top -l 1 | grep "CPU usage" | awk '{print $3}' | sed 's/%//')%"
    echo "   Memory pressure: $(memory_pressure | grep "System-wide memory free percentage" | awk '{print $5}')%"
    echo "   Swap used: $(sysctl vm.swapusage | awk '{print $7}' | sed 's/M/MB/')"
    
    # Processus dÃ©veloppement
    echo ""
    echo "ğŸ”§ Processus dev:"
    echo "   Node processes: $(ps aux | grep -c '[n]ode')"
    echo "   VS Code processes: $(ps aux | grep -c '[V]isual Studio Code')"
    echo "   Chrome processes: $(ps aux | grep -c '[C]hrome')"
    echo "   MongoDB processes: $(ps aux | grep -c '[m]ongod')"
    
    # Ports utilisÃ©s
    echo ""
    echo "ğŸŒ Ports actifs:"
    lsof -i :3000,5173,5174,5184,8080,27017 2>/dev/null | grep LISTEN || echo "   Aucun port dev actif"
    
    # Espace disque
    echo ""
    echo "ğŸ’¾ Stockage:"
    echo "   Espace libre: $(df -h / | awk 'NR==2{print $4}')"
    echo "   node_modules: $(du -sh node_modules 2>/dev/null | awk '{print $1}' || echo 'N/A')"
}

# Installation rapide des dÃ©pendances
quick-install() {
    if [ -f "pnpm-lock.yaml" ]; then
        echo "ğŸ“¦ Installation avec pnpm..."
        pnpm install --frozen-lockfile
    elif [ -f "yarn.lock" ]; then
        echo "ğŸ“¦ Installation avec yarn..."
        yarn install --frozen-lockfile
    elif [ -f "package-lock.json" ]; then
        echo "ğŸ“¦ Installation avec npm..."
        npm ci
    else
        echo "ğŸ“¦ Installation avec npm..."
        npm install
    fi
}

# DÃ©marrage rapide projet React
quick-start() {
    echo "ğŸš€ DÃ©marrage rapide projet React..."
    
    # VÃ©rifier les dÃ©pendances
    if [ ! -d "node_modules" ]; then
        echo "ğŸ“¦ Installation des dÃ©pendances..."
        quick-install
    fi
    
    # DÃ©marrer en mode dev
    if [ -f "vite.config.js" ] || [ -f "vite.config.ts" ]; then
        echo "âš¡ DÃ©marrage avec Vite..."
        npm run dev
    elif [ -f "next.config.js" ]; then
        echo "â–² DÃ©marrage avec Next.js..."
        npm run dev
    else
        echo "âš›ï¸  DÃ©marrage avec Create React App..."
        npm start
    fi
}

# Test rapide avec coverage
quick-test() {
    echo "ğŸ§ª Tests rapides..."
    
    if command -v pnpm &> /dev/null && [ -f "pnpm-lock.yaml" ]; then
        pnpm test
    else
        npm test
    fi
}

# Build optimisÃ©
quick-build() {
    echo "ğŸ—ï¸  Build optimisÃ©..."
    
    # Nettoyage prÃ©alable
    rm -rf dist build .next 2>/dev/null || true
    
    # Build selon le type de projet
    if [ -f "vite.config.js" ] || [ -f "vite.config.ts" ]; then
        npm run build
    elif [ -f "next.config.js" ]; then
        npm run build
    else
        npm run build
    fi
    
    echo "âœ… Build terminÃ©"
    
    # Afficher la taille
    if [ -d "dist" ]; then
        echo "ğŸ“Š Taille du build: $(du -sh dist | awk '{print $1}')"
    elif [ -d "build" ]; then
        echo "ğŸ“Š Taille du build: $(du -sh build | awk '{print $1}')"
    fi
}

# Fonction de mise Ã  jour des dÃ©pendances
update-deps() {
    echo "ğŸ”„ Mise Ã  jour des dÃ©pendances..."
    
    if command -v pnpm &> /dev/null && [ -f "pnpm-lock.yaml" ]; then
        pnpm update
    elif command -v yarn &> /dev/null && [ -f "yarn.lock" ]; then
        yarn upgrade
    else
        npm update
    fi
    
    echo "âœ… DÃ©pendances mises Ã  jour"
}

# Optimisation automatique au dÃ©marrage du terminal
