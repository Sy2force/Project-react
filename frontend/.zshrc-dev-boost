    export DEV_MODE_LOADED=1
    
    # Optimisations silencieuses
    ulimit -n 10240 2>/dev/null || true
    
    echo "ğŸš€ Terminal optimisÃ© pour le dÃ©veloppement"
    echo "ğŸ’¡ Commandes disponibles:"
    echo "   dev-war-mode    - Performance maximale"
    echo "   dev-monitor     - Monitoring systÃ¨me"
    echo "   clean-dev       - Nettoyage environnement"
    echo "   quick-start     - DÃ©marrage rapide projet"
    echo "   quick-test      - Tests rapides"
    echo "   quick-build     - Build optimisÃ©"
fi
