# ===========================================
# SHAY ACOCA PORTFOLIO - ENVIRONMENT CONFIG
# ===========================================

# ===========================================
# BACKEND CONFIGURATION
# ===========================================

# Server Configuration
NODE_ENV=development
PORT=5001
HOST=localhost

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/shayacoca-portfolio
MONGODB_TEST_URI=mongodb://localhost:27017/shayacoca-portfolio-test

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRES_IN=30d

# CORS Configuration
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX=5

# Email Configuration (Optional - for contact form)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
CONTACT_EMAIL=contact@shayacoca.com

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf

# Security Configuration
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your-session-secret-key
COOKIE_SECURE=false
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=lax

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================

# API Configuration
VITE_API_URL=http://localhost:5001/api
VITE_BASE_URL=http://localhost:3000

# App Configuration
VITE_APP_NAME=Shay Acoca Portfolio
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Portfolio futuriste de Shay Acoca

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_PWA=true
VITE_ENABLE_DARK_MODE=true

# External Services
VITE_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
VITE_SENTRY_DSN=your-sentry-dsn

# Social Media
VITE_GITHUB_URL=https://github.com/shayacoca
VITE_LINKEDIN_URL=https://linkedin.com/in/shayacoca
VITE_TWITTER_URL=https://twitter.com/shayacoca

# ===========================================
# DEVELOPMENT TOOLS
# ===========================================

# Debug Configuration
DEBUG=app:*
LOG_LEVEL=info
ENABLE_LOGGING=true

# Testing Configuration
CYPRESS_BASE_URL=http://localhost:3000
CYPRESS_API_URL=http://localhost:5001/api
TEST_TIMEOUT=10000

# ===========================================
# PRODUCTION OVERRIDES
# ===========================================

# Production Database
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/production-db

# Production URLs
# VITE_API_URL=https://api.shayacoca.com
# VITE_BASE_URL=https://shayacoca.com
# FRONTEND_URL=https://shayacoca.com

# Production Security
# JWT_SECRET=super-secure-production-secret
# COOKIE_SECURE=true
# NODE_ENV=production

# ===========================================
# OPTIONAL SERVICES
# ===========================================

# Redis (for caching and sessions)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your-redis-password

# AWS S3 (for file storage)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=shayacoca-uploads

# Cloudinary (for image optimization)
# CLOUDINARY_CLOUD_NAME=your-cloud-name
# CLOUDINARY_API_KEY=your-api-key
# CLOUDINARY_API_SECRET=your-api-secret
