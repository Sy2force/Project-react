{
  "info": {
    "name": "Cards Business API - Shay Acoca",
    "description": "Collection complète pour tester l'API des cartes business et favoris",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5001/api",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "card_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register Business User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"business@example.com\",\n  \"password\": \"Business123!\",\n  \"role\": \"business\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": ["{{base_url}}"],
              "path": ["auth", "register"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('jwt_token', response.token);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Login Business User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"business@example.com\",\n  \"password\": \"Business123!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('jwt_token', response.token);",
                  "}"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Cards Management",
      "item": [
        {
          "name": "Get All Cards",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/cards?page=1&limit=10&sort=-createdAt",
              "host": ["{{base_url}}"],
              "path": ["cards"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "sort",
                  "value": "-createdAt"
                }
              ]
            }
          }
        },
        {
          "name": "Search Cards",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/cards?q=restaurant&page=1&limit=5",
              "host": ["{{base_url}}"],
              "path": ["cards"],
              "query": [
                {
                  "key": "q",
                  "value": "restaurant"
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "5"
                }
              ]
            }
          }
        },
        {
          "name": "Create Card",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Restaurant Le Gourmet\",\n  \"subtitle\": \"Cuisine française authentique\",\n  \"description\": \"Découvrez notre restaurant gastronomique au cœur de Tel Aviv. Nous proposons une cuisine française raffinée avec des produits frais et locaux. Réservation recommandée.\",\n  \"phone\": \"054-1234567\",\n  \"email\": \"contact@legourmet.co.il\",\n  \"webUrl\": \"https://legourmet.co.il\",\n  \"address\": \"123 Dizengoff Street, Tel Aviv, Israel\",\n  \"location\": {\n    \"lat\": 32.0853,\n    \"lng\": 34.7818\n  },\n  \"image\": \"https://example.com/restaurant.jpg\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/cards",
              "host": ["{{base_url}}"],
              "path": ["cards"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('card_id', response.data._id);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Get Card by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/cards/{{card_id}}",
              "host": ["{{base_url}}"],
              "path": ["cards", "{{card_id}}"]
            }
          }
        },
        {
          "name": "Update Card",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Restaurant Le Gourmet - Mis à jour\",\n  \"description\": \"Notre restaurant gastronomique propose désormais un menu végétarien complet en plus de notre cuisine française traditionnelle.\",\n  \"phone\": \"054-1234568\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/cards/{{card_id}}",
              "host": ["{{base_url}}"],
              "path": ["cards", "{{card_id}}"]
            }
          }
        },
        {
          "name": "Delete Card",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/cards/{{card_id}}",
              "host": ["{{base_url}}"],
              "path": ["cards", "{{card_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Favorites Management",
      "item": [
        {
          "name": "Toggle Favorite",
          "request": {
            "method": "PATCH",
            "header": [],
