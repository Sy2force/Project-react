          "name": "Remove from Favorites",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/users/me/favorites/{{card_id}}",
              "host": ["{{base_url}}"],
              "path": ["users", "me", "favorites", "{{card_id}}"]
            }
          }
        }
      ]
    },
    {
