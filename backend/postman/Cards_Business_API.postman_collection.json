          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/cards?owner=USER_ID_HERE&page=1&limit=10",
              "host": ["{{base_url}}"],
              "path": ["cards"],
              "query": [
                {
                  "key": "owner",
                  "value": "USER_ID_HERE",
                  "description": "Remplacer par un ID utilisateur réel"
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        }
      ]
    },
